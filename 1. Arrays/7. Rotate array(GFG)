class Solution{
    public:
    void reverse(int arr[],int s,int e)
    {
        while(s<e)
        {
            swap(arr[s],arr[e]);
            s++;
            e--;
        }
    }
    //Function to rotate an array by d elements in counter-clockwise direction. 
    void rotateArr(int arr[], int d, int n){
        // code here
        d = d%n;
        reverse(arr,0,d-1);
        reverse(arr,d,n-1);
        reverse(arr,0,n-1);
    }
};
